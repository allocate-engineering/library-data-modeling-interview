{
    "name": "Library Management System",
    "dockerComposeFile": "docker-compose.yml",
    "service": "app",
    "runServices": ["app", "postgres", "pgadmin-library"],
    "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
    "forwardPorts": [5432, 5050],
    "postCreateCommand": "echo 'Container setup complete. pgAdmin available at http://localhost:5050'",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-dotnettools.csharp",
                "ms-dotnettools.vscode-dotnet-runtime",
                "ms-vscode.vscode-json",
                "ms-ossdata.vscode-postgresql"
            ],
            "settings": {
                "postgresql.connections": [
                    {
                        "label": "Library Database",
                        "host": "postgres",
                        "user": "librarian",
                        "password": "bookworm123", 
                        "database": "librarydb",
                        "port": 5432
                    }
                ]
            }
        }
    }
}